{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "target": "es2022",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [".yarn", "dist", "src/**/*.test.ts", "jest.config.ts"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
